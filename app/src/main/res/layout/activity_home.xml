<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:theme="@style/AppTheme.ToolbarStyle" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E1E6EA"
        android:orientation="vertical"
        android:paddingBottom="56dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:weightSum="3">

        <android.support.v7.widget.CardView
            android:id="@+id/gw"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardBackgroundColor="#fff"
            android:background="#fff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="5dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="100dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_soccer_tactics"/>

            <TextView
                android:id="@+id/nfs_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BFW GW Live"
                android:textColor="#000"
                android:fontFamily="@font/regular"
                android:textSize="20dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battle for Westeros 2018-19"
                android:textColor="#000"
                android:fontFamily="@font/light"
                android:textSize="12dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="20dp"/>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardBackgroundColor="#fff"
            android:background="#fff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="5dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="100dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_trophy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BFW Table"
                android:textColor="#000"
                android:fontFamily="@font/regular"
                android:textSize="20dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battle for Westeros League Table 2018-19"
                android:textColor="#000"
                android:fontFamily="@font/light"
                android:textSize="12dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="20dp"/>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/veg_tally"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardBackgroundColor="#fff"
            android:background="#fff"
            android:layout_margin="10dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="5dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="100dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_stadium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:textColor="#000"
                android:fontFamily="@font/regular"
                android:textSize="20dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coming soon"
                android:textColor="#000"
                android:fontFamily="@font/light"
                android:textSize="12dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="20dp"/>


        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>