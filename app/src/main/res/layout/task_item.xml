<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:weightSum="13">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="@font/bold"
            android:text="Titlsa"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/whiteWalker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="14dp"
            tools:text="1" />

        <TextView
            android:id="@+id/brotherhood"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="14dp"
            tools:text="1" />

        <TextView
            android:id="@+id/dothraki"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="14dp"
            tools:text="1" />

        <TextView
            android:id="@+id/valyrians"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="14dp"
            tools:text="1" />

        <TextView
            android:id="@+id/targaryens"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="14dp"
            tools:text="1" />

        <TextView
            android:id="@+id/nightsWatch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="14dp"
            tools:text="1" />

        <TextView
            android:id="@+id/lannisters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="14dp"
            tools:text="1" />

        <TextView
            android:id="@+id/starks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="14dp"
            tools:text="1" />

        <TextView
            android:id="@+id/facelessMen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="14dp"
            tools:text="1" />

        <TextView
            android:id="@+id/kingslayers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="14dp"
            tools:text="1" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

</LinearLayout>